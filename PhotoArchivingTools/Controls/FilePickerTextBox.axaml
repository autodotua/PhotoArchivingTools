<UserControl
    x:Class="PhotoArchivingTools.Controls.FilePickerTextBox"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="Auto,0,*,0,Auto">
        <TextBlock
            Margin="0,0,4,0"
            VerticalAlignment="Center"
            IsVisible="{Binding ElementName=root, Path=Label, Converter={StaticResource NotNullConverter}}"
            Text="{Binding ElementName=root, Path=Label}" />
        <TextBox
            Grid.Column="2"
            VerticalAlignment="Center"
            Text="{Binding ElementName=root, Path=FileNames}" />
        <Button
            Grid.Column="4"
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            Click="Button_Click"
            Content="{Binding ElementName=root, Path=ButtonContent}" />
    </Grid>
</UserControl>
