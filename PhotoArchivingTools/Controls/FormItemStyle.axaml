<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:PhotoArchivingTools.Controls">
    <Design.PreviewWith>
        <c:FormItem Label="标题">
            <TextBox Text="输入框" />
        </c:FormItem>
    </Design.PreviewWith>
    <ControlTheme
        x:Key="{x:Type c:FormItem}"
        TargetType="c:FormItem">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,8,*">
                    <TextBlock
                        Name="PART_LabelText"
                        Width="{TemplateBinding LabelWidth}"
                        VerticalAlignment="Center"
                        Text="{TemplateBinding Label}" />
                    <ContentPresenter
                        Name="PART_ContentPresenter"
                        Grid.Column="2"
                        Content="{TemplateBinding Content}"
                        RenderOptions.EdgeMode="Antialias" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
