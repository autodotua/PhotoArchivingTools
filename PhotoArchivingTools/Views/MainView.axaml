<UserControl
    x:Class="PhotoArchivingTools.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="using:GroupBox.Avalonia.Controls"
    xmlns:local="clr-namespace:PhotoArchivingTools.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PhotoArchivingTools.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MainViewModel"
    IsEnabled="{Binding IsEnable}"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Grid
        Margin="4"
        RowDefinitions="Auto,8,*">
        <Grid ColumnDefinitions="Auto,8,*,8,Auto,8,Auto,8,Auto">
            <TextBlock
                VerticalAlignment="Center"
                Text="操作目录：" />
            <TextBox
                Grid.Column="2"
                VerticalAlignment="Center"
                Text="{Binding Dir}" />
            <Button
                Grid.Column="4"
                VerticalAlignment="Center"
                Content="浏览.." />
        </Grid>
        <ScrollViewer
            Grid.Row="2"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel
                Orientation="Vertical"
                Spacing="8">
                <StackPanel.Styles>
                    <Style Selector="Expander">
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                    </Style>
                </StackPanel.Styles>
                <Expander Header="相同时间段照片归档">
                    <local:SameTimePhotosMergePanel />
                </Expander>
                <Expander
                    Grid.Column="2"
                    Header="删除存在RAW的JPG">
                    <local:DeleteJpgIfExistRawPanel />
                </Expander>  
                <Expander
                    Grid.Column="2"
                    Header="使用Exif时间更新文件修改时间">
                    <local:RepairModifiedTimePanel />
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
