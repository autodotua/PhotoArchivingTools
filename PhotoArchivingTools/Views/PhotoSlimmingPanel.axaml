<UserControl
    x:Class="PhotoArchivingTools.Views.PhotoSlimmingPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="using:GroupBox.Avalonia.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PhotoArchivingTools.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:PhotoSlimmingViewModel"
    mc:Ignorable="d">
    <Grid
        Margin="8"
        RowDefinitions="Auto,8,Auto,8,Auto,8,*,8,Auto">
        <TextBlock
            Text="复制或压缩照片，用于生成更小的照片集副本"
            TextWrapping="Wrap" />
        <Grid
            Grid.Row="2"
            ColumnDefinitions="*,8,Auto">
            <ListBox
                DisplayMemberBinding="{Binding Name}"
                ItemsSource="{Binding Configs}"
                SelectedItem="{Binding Config}" />
            <StackPanel
                Grid.Column="2"
                Orientation="Vertical"
                Spacing="8">
                <Button
                    Command="{Binding CreateCommand}"
                    Content="新增配置" />
                <Button
                    Command="{Binding EditCommand}"
                    Content="修改配置"
                    IsEnabled="{Binding Config, Converter={StaticResource NotNullConverter}}" />
                <Button
                    Command="{Binding RemoveCommand}"
                    Content="删除配置"
                    IsEnabled="{Binding Config, Converter={StaticResource NotNullConverter}}" />
            </StackPanel>
        </Grid>
        <StackPanel
            Grid.Row="4"
            Orientation="Horizontal"
            Spacing="8">
            <RadioButton
                x:Name="rbtnCopy"
                Content="复制和压缩指定文件"
                IsChecked="True" />
            <RadioButton Content="删除目标目录中已经不存在对应源文件的文件" />
            <Button
                Grid.Row="4"
                Command="{Binding InitializeCommand}"
                CommandParameter="{Binding #rbtnCopy.IsChecked}"
                Content="初始化" />
        </StackPanel>
        <Grid
            Grid.Row="6"
            ColumnDefinitions="*,8,*">
            <gb:GroupBox Header="待更新文件">
                <ListBox ItemsSource="{Binding UpdatingFiles}" />
            </gb:GroupBox>
            <gb:GroupBox
                Grid.Column="2"
                Header="错误文件">
                <ListBox ItemsSource="{Binding ErrorFiles}" />
            </gb:GroupBox>

        </Grid>
        <Button
            Grid.Row="8"
            Command="{Binding ExecuteCommand}"
            Content="执行" />
    </Grid>
</UserControl>
